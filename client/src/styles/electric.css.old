@tailwind base;
@tailwind components;
@tailwind utilities;

/* Electric Design System - Complete Design System Export */

/* =============================================== */
/* CSS VARIABLES */
/* =============================================== */
/* Electric Design System - CSS Variables */
:root {
  --electric-lime: #d4ff4a;
  --electric-lime-glow: rgba(212, 255, 74, 0.3);
  --electric-dark: #0a0a0a;
  --electric-muted: #1a1a1a;
  --electric-border: #2a2a2a;
  --electric-text: #ffffff;
  --electric-text-muted: #a0a0a0;
}

.electric-glow {
  box-shadow: 0 0 20px var(--electric-lime-glow);
}

.electric-pulse {
  animation: electric-pulse 2s ease-in-out infinite;
}

@keyframes electric-pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

/* Smooth animations for better UX */
@keyframes fadeIn {
  from { 
    opacity: 0; 
    transform: translateY(10px); 
  }
  to { 
    opacity: 1; 
    transform: translateY(0); 
  }
}

@keyframes slideIn {
  from { 
    opacity: 0; 
    transform: translateX(-10px); 
  }
  to { 
    opacity: 1; 
    transform: translateX(0); 
  }
}

@keyframes scaleIn {
  from { 
    opacity: 0; 
    transform: scale(0.95); 
  }
  to { 
    opacity: 1; 
    transform: scale(1); 
  }
}

.smooth-fade-in {
  animation: fadeIn 0.3s ease-out;
}

.smooth-slide-in {
  animation: slideIn 0.3s ease-out;
}

.smooth-scale-in {
  animation: scaleIn 0.2s ease-out;
}

/* Enhanced hover effects */
.hover-lift {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.hover-lift:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 25px -5px rgba(212, 255, 74, 0.1);
}

/* Smooth button interactions */
.btn-smooth {
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.btn-smooth:hover {
  transform: scale(1.02);
}

.btn-smooth:active {
  transform: scale(0.98);
}

/* Card hover enhancement */
.card-hover {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.card-hover:hover {
  border-color: var(--electric-lime);
  box-shadow: 0 0 30px rgba(212, 255, 74, 0.1);
  transform: translateY(-1px);
}

/* =============================================== */
/* TYPOGRAPHY */
/* =============================================== */
/* Electric Typography */
.electric-heading {
  font-family: 'Inter', sans-serif;
  font-weight: 300;
  letter-spacing: -0.02em;
  line-height: 1.2;
}

.electric-body {
  font-family: 'Inter', sans-serif;
  font-weight: 300;
  line-height: 1.6;
}

.electric-accent {
  color: var(--electric-lime);
  font-weight: 400;
}

/* =============================================== */
/* GLOBAL STYLES */
/* =============================================== */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

@layer base {
  html {
    background-color: var(--electric-dark);
  }

  body {
    background-color: var(--electric-dark);
    color: var(--electric-text);
    font-family: 'Inter', sans-serif;
    min-height: 100vh;
    margin: 0;
  }

  #root {
    min-height: 100vh;
    background-color: var(--electric-dark);
  }
}

